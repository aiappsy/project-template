        let onboardingData = {};
        let isAdminMode = false;
        let currentEditElement = null;

        // Initialize the app
        document.addEventListener('DOMContentLoaded', function() {
            // Check if user has already completed onboarding
            if (hasCompletedOnboarding()) {
                // Redirect to main app
                window.location.href = 'index.html';
                return;
            }

            // Load any saved onboarding data
            loadOnboardingData();

            // Set up event listeners
            setupEventListeners();

            // Initialize step indicators
            updateStepIndicators();
        });

        // Check if user has completed onboarding
        function hasCompletedOnboarding() {
            return localStorage.getItem('aihub_onboarding_completed') === 'true';
        }

        // Load saved onboarding data
        function loadOnboardingData() {
            const savedData = localStorage.getItem('aihub_onboarding_data');
            if (savedData) {
                try {
                    onboardingData = JSON.parse(savedData);
                    // Populate form fields with saved data
                    populateFormFields();
                } catch (e) {
                    console.error('Error loading onboarding data:', e);
                }
            }
        }

        // Save onboarding data
        function saveOnboardingData() {
            localStorage.setItem('aihub_onboarding_data', JSON.stringify(onboardingData));
        }

        // Populate form fields with saved data
        function populateFormFields() {
            // Personal Information
            if (onboardingData.personalInfo) {
                document.getElementById('firstName').value = onboardingData.personalInfo.firstName || '';
                document.getElementById('lastName').value = onboardingData.personalInfo.lastName || '';
                document.getElementById('email').value = onboardingData.personalInfo.email || '';
                document.getElementById('phone').value = onboardingData.personalInfo.phone || '';
            }

            // Professional Information
            if (onboardingData.professionalInfo) {
                document.getElementById('company').value = onboardingData.professionalInfo.company || '';
                document.getElementById('jobTitle').value = onboardingData.professionalInfo.jobTitle || '';
                document.getElementById('industry').value = onboardingData.professionalInfo.industry || '';
                document.getElementById('experience').value = onboardingData.professionalInfo.experience || '';
            }

            // Use Case
            if (onboardingData.useCase) {
                if (onboardingData.useCase.useCases) {
                    const checkboxes = document.querySelectorAll('input[name="useCase"]');
                    checkboxes.forEach(checkbox => {
                        checkbox.checked = onboardingData.useCase.useCases.includes(checkbox.value);
                    });
                }
                document.getElementById('otherUseCase').value = onboardingData.useCase.otherUseCase || '';
                document.getElementById('goals').value = onboardingData.useCase.goals || '';
            }

            // Technical Skills
            if (onboardingData.technicalSkills) {
                if (onboardingData.technicalSkills.skills) {
                    const checkboxes = document.querySelectorAll('input[name="skills"]');
                    checkboxes.forEach(checkbox => {
                        checkbox.checked = onboardingData.technicalSkills.skills.includes(checkbox.value);
                    });
                }
                document.getElementById('skillLevel').value = onboardingData.technicalSkills.skillLevel || '';
                document.getElementById('tools').value = onboardingData.technicalSkills.tools || '';
            }

            // Preferences
            if (onboardingData.preferences) {
                document.getElementById('notifications').value = onboardingData.preferences.notifications || '';
                document.getElementById('updates').value = onboardingData.preferences.updates || '';
                document.getElementById('newsletter').value = onboardingData.preferences.newsletter || '';
                document.getElementById('referral').value = onboardingData.preferences.referral || '';
                document.getElementById('comments').value = onboardingData.preferences.comments || '';
            }
        }

        // Set up event listeners
        function setupEventListeners() {
            // Admin toggle
            document.getElementById('adminToggle').addEventListener('click', function() {
                isAdminMode = !isAdminMode;
                toggleAdminMode();
            });

            // Edit icons
            document.querySelectorAll('.edit-icon').forEach(icon => {
                icon.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const parent = this.parentElement;
                    openEditModal(parent);
                });
            });
        }

        // Toggle admin mode
        function toggleAdminMode() {
            const editableFields = document.querySelectorAll('.editable-field');
            editableFields.forEach(field => {
                if (isAdminMode) {
                    field.classList.add('admin-mode');
                } else {
                    field.classList.remove('admin-mode');
                }
            });

            if (isAdminMode) {
                showNotification('Admin mode enabled. You can now edit the form fields.', 'info');
            } else {
                showNotification('Admin mode disabled.', 'info');
            }
        }

        // Open edit modal
        function openEditModal(element) {
            if (!isAdminMode) return;

            currentEditElement = element;
            const title = element.querySelector('h3')?.textContent || '';
            const description = element.querySelector('p')?.textContent || '';

            document.getElementById('editTitle').value = title;
            document.getElementById('editDescription').value = description;
            document.getElementById('editModal').classList.remove('hidden');
        }

        // Close edit modal
        function closeEditModal() {
            document.getElementById('editModal').classList.add('hidden');
            currentEditElement = null;
        }

        // Save edit modal
        function saveEditModal() {
            if (!currentEditElement) return;

            const title = document.getElementById('editTitle').value;
            const description = document.getElementById('editDescription').value;

            const titleElement = currentEditElement.querySelector('h3');
            const descriptionElement = currentEditElement.querySelector('p');

            if (titleElement) {
                titleElement.innerHTML = title + ' <i class="fas fa-edit edit-icon ml-2"></i>';
            }

            if (descriptionElement) {
                descriptionElement.innerHTML = description + ' <i class="fas fa-edit edit-icon ml-2"></i>';
            }

            // Re-attach event listeners to new edit icons
            currentEditElement.querySelectorAll('.edit-icon').forEach(icon => {
                icon.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const parent = this.parentElement;
                    openEditModal(parent);
                });
            });

            closeEditModal();
            showNotification('Content updated successfully!', 'success');
        }

        // Navigate to next step
        function nextStep() {
            if (currentStep < totalSteps) {
                // Save current step data
                saveCurrentStepData();

                // Validate current step
                if (!validateCurrentStep()) {
                    return;
                }

                // Hide current step
                document.getElementById(`step${currentStep}`).classList.add('hidden');

                // Increment step
                currentStep++;

                // Show next step
                document.getElementById(`step${currentStep}`).classList.remove('hidden');
                document.getElementById(`step${currentStep}`).classList.add('fade-in');

                // Update progress
                updateProgress();
                updateStepIndicators();
            }
        }

        // Navigate to previous step
        function prevStep() {
            if (currentStep > 1) {
                // Save current step data
                saveCurrentStepData();

                // Hide current step
                document.getElementById(`step${currentStep}`).classList.add('hidden');

                // Decrement step
                currentStep--;

                // Show previous step
                document.getElementById(`step${currentStep}`).classList.remove('hidden');
                document.getElementById(`step${currentStep}`).classList.add('fade-in');

                // Update progress
                updateProgress();
                updateStepIndicators();
            }
        }

        // Save current step data
        function saveCurrentStepData() {
            switch (currentStep) {
                case 1:
                    onboardingData.personalInfo = {
                        firstName: document.getElementById('firstName').value,
                        lastName: document.getElementById('lastName').value,
                        email: document.getElementById('email').value,
                        phone: document.getElementById('phone').value
                    };
                    break;
                case 2:
                    onboardingData.professionalInfo = {
                        company: document.getElementById('company').value,
                        jobTitle: document.getElementById('jobTitle').value,
                        industry: document.getElementById('industry').value,
                        experience: document.getElementById('experience').value
                    };
                    break;
                case 3:
                    const useCases = [];
                    document.querySelectorAll('input[name="useCase"]:checked').forEach(checkbox => {
                        useCases.push(checkbox.value);
                    });
                    onboardingData.useCase = {
                        useCases: useCases,
                        otherUseCase: document.getElementById('otherUseCase').value,
                        goals: document.getElementById('goals').value
                    };
                    break;
                case 4:
                    const skills = [];
                    document.querySelectorAll('input[name="skills"]:checked').forEach(checkbox => {
                        skills.push(checkbox.value);
                    });
                    onboardingData.technicalSkills = {
                        skills: skills,
                        skillLevel: document.getElementById('skillLevel').value,
                        tools: document.getElementById('tools').value
                    };
                    break;
                case 5:
                    onboardingData.preferences = {
                        notifications: document.getElementById('notifications').value,
                        updates: document.getElementById('updates').value,
                        newsletter: document.getElementById('newsletter').value,
                        referral: document.getElementById('referral').value,
                        comments: document.getElementById('comments').value
                    };
                    break;
            }

            // Save to localStorage
            saveOnboardingData();
        }

        // Validate current step
        function validateCurrentStep() {
            switch (currentStep) {
                case 1:
                    const firstName = document.getElementById('firstName').value.trim();
                    const lastName = document.getElementById('lastName').value.trim();
                    const email = document.getElementById('email').value.trim();

                    if (!firstName) {
                        showNotification('Please enter your first name', 'error');
                        return false;
                    }

                    if (!lastName) {
                        showNotification('Please enter your last name', 'error');
                        return false;
                    }

                    if (!email) {
                        showNotification('Please enter your email address', 'error');
                        return false;
                    }

                    if (!isValidEmail(email)) {
                        showNotification('Please enter a valid email address', 'error');
                        return false;
                    }

                    break;
                case 2:
                    // No required fields in step 2
                    break;
                case 3:
                    const useCases = document.querySelectorAll('input[name="useCase"]:checked');
                    if (useCases.length === 0) {
                        showNotification('Please select at least one use case', 'error');
                        return false;
                    }
                    break;
                case 4:
                    // No required fields in step 4
                    break;
                case 5:
                    // No required fields in step 5
                    break;
            }

            return true;
        }

        // Validate email format
        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        // Update progress bar
        function updateProgress() {
            const progress = (currentStep / totalSteps) * 100;
            document.getElementById('progressBar').style.width = `${progress}%`;
            document.getElementById('currentStep').textContent = currentStep;
        }

        // Update step indicators
        function updateStepIndicators() {
            const indicators = document.querySelectorAll('.step-indicator');
            indicators.forEach((indicator, index) => {
                indicator.classList.remove('active', 'completed');
                if (index < currentStep - 1) {
                    indicator.classList.add('completed');
                } else if (index === currentStep - 1) {
                    indicator.classList.add('active');
                }
            });
        }

        // Submit onboarding
        function submitOnboarding() {
            // Save current step data
            saveCurrentStepData();

            // Validate current step
            if (!validateCurrentStep()) {
                return;
            }

            // Add timestamp
            onboardingData.completedAt = new Date().toISOString();

            // Save to localStorage
            saveOnboardingData();

            // Mark onboarding as completed
            localStorage.setItem('aihub_onboarding_completed', 'true');

            // Save user data for main app
            localStorage.setItem('aihub_user_data', JSON.stringify({
                firstName: onboardingData.personalInfo.firstName,
                lastName: onboardingData.personalInfo.lastName,
                email: onboardingData.personalInfo.email,
                phone: onboardingData.personalInfo.phone,
                company: onboardingData.professionalInfo.company,
                jobTitle: onboardingData.professionalInfo.jobTitle,
                industry: onboardingData.professionalInfo.industry,
                experience: onboardingData.professionalInfo.experience,
                useCases: onboardingData.useCase.useCases,
                goals: onboardingData.useCase.goals,
                skills: onboardingData.technicalSkills.skills,
                skillLevel: onboardingData.technicalSkills.skillLevel,
                tools: onboardingData.technicalSkills.tools,
                notifications: onboardingData.preferences.notifications,
                updates: onboardingData.preferences.updates,
                newsletter: onboardingData.preferences.newsletter,
                referral: onboardingData.preferences.referral,
                comments: onboardingData.preferences.comments,
                completedAt: onboardingData.completedAt
            }));

            // Hide current step
            document.getElementById(`step${currentStep}`).classList.add('hidden');

            // Show completion screen
            document.getElementById('completionScreen').classList.remove('hidden');
            document.getElementById('completionScreen').classList.add('fade-in');

            // Update progress to 100%
            document.getElementById('progressBar').style.width = '100%';

            showNotification('Onboarding completed successfully!', 'success');
        }

        // Go to main app
        function goToMainApp() {
            window.location.href = 'index.html';
        }

        // Show notification
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;

            document.getElementById('notificationContainer').appendChild(notification);

            // Show notification
            setTimeout(() => {
                notification.classList.add('show');
            }, 100);

            // Hide notification after 3 seconds
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => {
                    notification.remove();
                }, 300);
            }, 3000);
        }
    </script>
</body>
</html>
